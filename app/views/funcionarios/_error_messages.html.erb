<% if @funcionario.errors.any? %>
	  <div id="error_explanation">
	    <div class="alert alert-error">
	      The form contains <%= pluralize(@funcionario.errors.count, "error") %>.
	    </div>
	    <ul>
	    <% @funcionario.errors.full_messages.each do |msg| %>
	      <li>* <%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>
  