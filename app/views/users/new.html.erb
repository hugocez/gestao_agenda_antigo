<% provide(:title, 'Cadastre sua Empresa') %>
<h1>Cadastre sua Empresa</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>

	  <%= render 'shared/error_messages'%>

      <%= f.label :name, 'Razao social' %>
      <%= f.text_field :name %>

      <%= f.label :email, 'Usuario Administrador' %>
      <%= f.text_field :email %>

      <%= f.label :password, 'Senha' %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Digite novamente sua senha" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Criar conta para a Empresa", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>